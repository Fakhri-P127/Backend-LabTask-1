@model Card

		<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>teachers / details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-details-area pt-150 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5 col-xs-12">
                <div class="teacher-details-img">
                    <img src="@Model.Image" alt="teacher">
                </div>
            </div>
            <div class="col-md-7 col-sm-7 col-xs-12">
                <div class="teacher-details-content ml-50">
                    <h2>@Model.Fullname</h2>
                    <a asp-controller="home" asp-action="professionpage" asp-route-id="@Model.Profession.Id">
                        <h5>@Model.Profession.Name</h5>
                        </a>
                        <h4>about me</h4>
                        <p>@Model.About</p>
                        <ul>
                            <li><span>degree: </span>PHD in Micro Biology</li>
                            <li><span>experience: </span>7 years experience</li>
                            <li><span>hobbies: </span>music, travelling, catching fish</li>
                            <li><span>faculty: </span>Din, Department of Micro Biology</li>
                        </ul>
</div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <div class="teacher-contact">
                    <h4>contact information</h4>
                    <p><span>mail me : </span>@Model.Email</p>
                    <p><span>make a call : </span>@Model.PhoneNumber</p>
                    <p><span>skype : </span> stuart.k</p>
                    <ul>
                        <li><a href="@Model.FacebookUrl"><i class="@Model.FacebookIcon"></i></a></li>
                        <li><a href="@Model.PinterestUrl"><i class="@Model.PinterestIcon"></i></a></li>
                        <li><a href="@Model.VimeoUrl"><i class="@Model.VimeoIcon"></i></a></li>
                        <li><a href="@Model.TwitterUrl"><i class="@Model.TwitterIcon"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="skill-area">
                    <h4>skills</h4>
                </div>
                <div class="skill-wrapper">
                    <div class="row">
                        @foreach (Skill skill in Model.Skills)
                        {
                            <div class="col-sm-4">
                                <div class="skill-bar-item">
                                    <span>@skill.Title</span>
                                    <div class="progress">
                                        <div data-wow-delay="0.4s" data-wow-duration="1.5s" style="width: @skill.Percent; visibility: visible; animation-duration: 1.5s; animation-delay: 1.2s; animation-name: fadeInLeft;" data-progress="50%" class="progress-bar wow fadeInLeft">
                                            <span class="text-top">@skill.Percent</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Teacher End -->