@model List<Card>
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>our teachers</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
    <div class="container">
        <div class="row">
            @foreach (Card teacher in Model)
            {
                <div class="col-md-3 col-sm-4 col-xs-12">
                    <div class="single-teacher mb-45">
                        <div class="single-teacher-img">
                            <a asp-controller="home" asp-action="details" asp-route-id="@teacher.Id"><img src="@teacher.Image" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><a asp-controller="home" asp-action="details" asp-route-id="@teacher.Id">@teacher.Fullname</a></h2>
                            <h4>@teacher.Profession.Name</h4>
                            <ul>
                                <li><a href="@teacher.FacebookUrl"><i class="@teacher.FacebookIcon"></i></a></li>
                                <li><a href="@teacher.PinterestUrl"><i class="@teacher.PinterestIcon"></i></a></li>
                                <li><a href="@teacher.VimeoUrl"><i class="@teacher.VimeoIcon"></i></a></li>
                                <li><a href="@teacher.TwitterUrl"><i class="@teacher.TwitterIcon"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- Teacher End -->